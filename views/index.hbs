<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">

	<!-- set viewport to device width to make site responsive -->
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- bootstrap css -->
		<link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<!-- custom styles -->
	<link rel="stylesheet" type="text/css" href="css/main.css">
	<title>MicroBlog</title>
</head>
<body>
				<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
  	<div class="col-md-1 logo">DTR</div>
		<div class="pull-right navlinks">
   		<a href="/signup">Sign Up</a> | 
   		<a href="/login">Log In</a>
   	</div>
  </div>
</nav>

				<div class="text-center" id="pageHeading">
					<strong>Daily Track Review</strong>
				</div>
	<div class="container">
		<div class="col-md-12" id ="blog-body">
			<script id= "blog-template" type="text/x-handlebars-template">
				\{{#each posts}}
				<div class="row">
					<div class="col-md-12 blogTitle post" id="\{{_id}}">
						<h2>\{{title}} \\\\\</h2>
					</div>
				</div>
				<div class="row">

					<div class="col-md-12">
					<br>
						<p>\{{content}}</p>
							<div class="col-md-2 pull-left btn-group-sm" id="\{{_id}}">
											<a href="javascript:void(0)" data-toggle="collapse" data-target="#form\{{_id}}">
				                    <span class="glyphicon glyphicon-pencil btn btn-primary" id='\{{_id}}'></span>
											</a>
												<form class="editDrop submitEdit" id="form\{{_id}}">
															<input type="text" class="form-control" name="title" value="\{{title}}">
															<textarea class="form-control" name='content' form="form\{{_id}}">\{{content}}</textarea><br>
															<input type="submit" class="btn btn-primary" id="\{{_id}}">
												</form>
											
												<span class="glyphicon glyphicon-remove btn btn-primary blogpostRemove" id="\{{_id}}" aria-hidden="true"> </span>
												
												<a href="javascript:void(0)" data-toggle="collapse" data-target="#commentForm\{{_id}}">
				                    <span class="glyphicon glyphicon-comment btn btn-primary" id='\{{_id}}'></span>
											</a>
												<form class="editDropComment submitComment" id="commentForm\{{_id}}">
															<input type="text" class="form-control" name="title" placeholder="Comment title">
															<textarea class="form-control" name='content' form="commentForm\{{_id}}" placeholder="Your comment here..."></textarea><br>
															<input type="submit" class="btn btn-primary" id="\{{_id}}">
												</form>
										</div><br><br>
										<div class="col-md-12 comment">Comments :</div>
											\{{#each comments}}
												<div class="row">
													<div class="col-md-12" id="\{{_id}}">
														<h4>\{{title}} \\\\\</h4>
														<p>\{{content}} <span class="glyphicon glyphicon-remove pull-right commentRemove" id="\{{_id}}" aria-hidden="true"> </span></p>

													</div>
												</div>
											\{{/each}}
					</div>
				</div>
				\{{/each}}
			</script>
			</div>
		</div>
			 <div class="row">
			 	<div class="col-md-3 col-md-offset-1">
			 	<hr>
					 <form id="newBlogForm">
		            <div class="form-group">
		              <input type="text" class="form-control" name="title" placeholder="Track : Artist">
		              <textarea class="form-control" name='content' form="newBlogForm" placeholder="Your track review here..."></textarea>
		              <br>
		              <input type="submit" class="btn btn-primary" id="submitTodo">
		            </div>
		       </form>
		      </div>
	</div>
	

		<!-- jquery -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js"></script>
	<!-- bootstrap -->
	<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<!-- handlebars -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.4/handlebars.min.js"></script>
	<!-- custom script -->
	<script type="text/javascript" src="scripts.js"></script>

</body>
</html>